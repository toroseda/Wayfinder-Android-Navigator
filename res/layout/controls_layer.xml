<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="vertical">
	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1">
		<LinearLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/layout_ruler" android:visibility="visible">
			<ImageView android:layout_height="wrap_content" android:layout_gravity="left|center_vertical" android:layout_width="fill_parent" android:scaleType="fitXY" android:layout_weight="1" android:src="@drawable/scale_left"></ImageView>
			<TextView android:layout_height="wrap_content" android:id="@+id/text_scale" android:textAppearance="@style/label_text_black_big" android:text="1000 m" android:layout_gravity="center" android:gravity="center" android:lines="1" android:maxLines="1" android:layout_width="wrap_content" android:paddingLeft="10dip" android:paddingRight="10dip"></TextView>
			<ImageView android:layout_height="wrap_content" android:layout_gravity="right|center_vertical" android:layout_width="fill_parent" android:scaleType="fitXY" android:layout_weight="1" android:src="@drawable/scale_right"></ImageView>
		</LinearLayout>
	</LinearLayout><FrameLayout android:layout_height="wrap_content" android:layout_width="fill_parent"><LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:gravity="center_horizontal">
		<com.vodafone.android.navigation.view.ZoomControls android:layout_height="wrap_content" android:id="@+id/zoom_controls" android:layout_width="wrap_content"></com.vodafone.android.navigation.view.ZoomControls>
	
</LinearLayout><ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_mute" android:layout_gravity="right" android:id="@+id/mute_icon" android:visibility="invisible"></ImageView></FrameLayout>
	


</LinearLayout>
